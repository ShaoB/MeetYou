<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FirstUploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="@string/text_upload_photo_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_20" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:layout_centerInParent="true"
                android:background="@mipmap/img_upload_photo_bg" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_photo"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/text_upload_nickname_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_20" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/login_edit_bg"
            android:gravity="center"
            android:hint="@string/text_upload_nickname"
            android:paddingLeft="@dimen/dp_5" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/upload_btn_bg"
            android:text="@string/text_upload_done"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>